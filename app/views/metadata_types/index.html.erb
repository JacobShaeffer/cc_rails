<div class='row pb-3'>
  <div class="col">
    <div class="btn btn-primary">
      <%= link_to "ADD TYPE", new_metadata_type_path, :class => 'btn' %>
    </div>
  </div>
</div>

<div class='row'>
  <div class="col">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">Metadata Type</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @metadata_types.each do |metadata_type| %>
          <tr>
            <td><%= link_to metadata_type.name, metadata_type_path(metadata_type.id) %></td>
            <td>
              <%= link_to "Edit", edit_metadata_type_path(metadata_type), :class => 'btn btn-primary' %>
              <%= link_to "Delete", metadata_type, method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
